<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="5dp">
    <ImageView
        android:layout_width="@dimen/tvseries_list_width"
        android:layout_height="@dimen/tvseries_list_height"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/tv_show"
        android:layout_gravity="center"
        android:focusable="false"
        android:contentDescription="@string/app_name" />
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:scrollHorizontally="false"
            android:ellipsize="none"
            android:maxLines="100"

            android:id="@+id/tv_series_name_text"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:id="@+id/subscription_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:focusable="false"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/subscribe_unsubscribe_button"
        android:textStyle="bold"
        android:layout_gravity="end"/>
</LinearLayout>